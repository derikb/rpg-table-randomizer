{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "prefer-template": [
	    	"error"
        ],
        "semi": [
            "error",
            "always"
        ],
	    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
	    "camelcase": [ "off" ],
	    "prefer-const": [ "error" ],
        "lines-between-class-members": [
            "off"
        ]
    }
}
