{
	"env": {
        "node": true,
        "es6": true
    },
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
	    "quotes": [
            "error",
            "single"
        ],
	    "semi": [
		    "error",
		    "always"
	    ],
	    "no-tabs": [
		    "off"
	    ],
	    "indent": [
	    	"error",
	    	"tab",
	    	{ "SwitchCase": 1 }
	    ],
	    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
	    "camelcase": [ "off" ],
	    "prefer-const": [ "error" ]
    }
}