{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
	    "semi": [
		    "error",
		    "always"
	    ],
	    "no-tabs": [
		    "off"
	    ],
	    "indent": [
	    	"error",
	    	"tab",
	    	{ "SwitchCase": 1 }
	    ],
	    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
	    "camelcase": [ "off" ]
    }
}